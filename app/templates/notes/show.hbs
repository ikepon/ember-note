<div class="note-title">
  {{model.title}}
</div>
<div class="note-body">
  {{model.body}}
</div>
<div class="row">
  {{#each model.pages as |page|}}
    <div class="col-xs-4">
      <h3>{{page.title}}</h3>
      <div>{{page.body}}</div>
      {{link-to '見る' "notes.pages.show" page class="btn btn-default btn-xs"}}
    </div>
  {{/each}}
</div>
